# Discord
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN
COMMAND_PREFIX=!
RPC_ENABLED=true
RPC_STATUS=online
RPC_ACTIVITY_TYPE=playing
RPC_ACTIVITY_NAME=with AI chats
RPC_ACTIVITY_URL=

# AI provider: gemini, groq, openai, or chatgpt (alias of openai)
LLM_PROVIDER=gemini

# Gemini
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
APPROVAL_GEMINI_API_KEY=
GEMINI_MODEL=gemini-3-flash
GEMINI_APPROVAL_MODEL=gemini-3-flash

# Groq
GROQ_API_KEY=YOUR_GROQ_API_KEY
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI (ChatGPT models)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o-mini

# Chat behavior
SYSTEM_PROMPT=You are Miku, a playful AI assistant on Discord. Default to English unless the user explicitly asks for another language. Keep a light, fun tone while staying helpful and respectful.
SYSTEM_RULES_MD=system_rules.md
CHAT_REPLAY_LOG_PATH=logger/chat_replay.jsonl

# Legacy fallback (if the 3 DB paths below are not set)
MEMORY_DB_PATH=chat_memory.db
CHAT_MEMORY_DB_PATH=chat_memory.db
BAN_DB_PATH=ban_control.db
CALLNAMES_DB_PATH=callnames.db
MEMORY_IDLE_TTL_SECONDS=300
IMAGE_MAX_BYTES=5242880
MAX_REPLY_CHARS=1800
TEMPERATURE=0.7
MAX_HISTORY=10

# Hidden dual-mention interaction (Miku + Teto in one message)
DUAL_MENTION_HOOK_ENABLED=true
TETO_BOT_ID=1474702560886652959
MIKU_BOT_ID=1373458132851888128
TETO_FEAR_MESSAGE_COUNT=7
TETO_WAIT_MIKU_TIMEOUT_SECONDS=20
