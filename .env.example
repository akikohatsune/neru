# Discord
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN
BOT_OWNER_ID=0
COMMAND_PREFIX=!
RPC_ENABLED=true
RPC_STATUS=online
RPC_ACTIVITY_TYPE=playing
RPC_ACTIVITY_NAME=with AI chats
RPC_ACTIVITY_URL=

# AI provider: gemini, groq, openai, or chatgpt (alias of openai)
LLM_PROVIDER=gemini

# Gemini
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
APPROVAL_GEMINI_API_KEY=
GEMINI_MODEL=gemini-3-flash
GEMINI_APPROVAL_MODEL=gemini-3-flash

# Groq
GROQ_API_KEY=YOUR_GROQ_API_KEY
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI (ChatGPT models)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o-mini

# Chat behavior
SYSTEM_PROMPT=You are Neru, a playful AI assistant on Discord. Default to English unless the user explicitly asks for another language. Keep a light, fun tone while staying helpful and respectful.
SYSTEM_RULES_MD=system_rules.md
CHAT_REPLAY_LOG_PATH=storage/log/chat_replay.jsonl

# File stores (SQLite, separated folder)
MEMORY_DB_PATH=storage/db/chat_memory.db
CHAT_MEMORY_DB_PATH=storage/db/chat_memory.db
BAN_DB_PATH=storage/db/ban_control.db
CALLNAMES_DB_PATH=storage/db/callnames.db
MEMORY_IDLE_TTL_SECONDS=300
IMAGE_MAX_BYTES=5242880
MAX_REPLY_CHARS=1800
TEMPERATURE=0.7
MAX_HISTORY=10
